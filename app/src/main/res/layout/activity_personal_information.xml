<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEFEF"
    tools:context=".Activity_personal_information">
    <ImageView
        android:id="@+id/imgTitle_ttcn"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-100dp"
        android:src="@drawable/bg_chitiet" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img_exit_ttcn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/avatar_chitiet_ttcn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgTitle_ttcn"
        android:layout_marginTop="-75dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar_thongtin_canhan"/>
    <TextView
        android:id="@+id/tv_name_ttcn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/avatar_chitiet_ttcn"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:id="@+id/rl_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_ttcn"
        android:background="@drawable/custom_button"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_nametitile_ttcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"

            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_ten"
        android:background="@drawable/custom_button"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_sdt_ttcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"

            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_ngaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sdt"
        android:background="@drawable/custom_button"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_date_ttcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"

            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_diaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_ngaySinh"
        android:background="@drawable/custom_button"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_address_ttcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"

            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_luuthaydoi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Lưu thay đổi"
        android:layout_below="@+id/rl_diaChi"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#035E05"
        android:layout_marginHorizontal="10dp"
        android:textColor="#fff"
        />

</RelativeLayout>
