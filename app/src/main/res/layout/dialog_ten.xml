<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_sua_tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dialog_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"


        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ted_dialog_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_dong_tenDialog"
            android:text="Đóng"
            android:fontFamily="@font/mali"
            android:textColor="@color/white"
            android:backgroundTint="#DD0A0A"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_sua_tenDialog"
            android:text="Sửa"
            android:textColor="@color/white"
            android:fontFamily="@font/mali"
            android:backgroundTint="@color/main"

            android:layout_marginLeft="60dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>